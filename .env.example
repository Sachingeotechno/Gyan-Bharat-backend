# Application
APP_NAME=EdTech API
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://edtech_user:edtech_pass@localhost:5432/edtech_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (SendGrid/SMTP)
EMAIL_FROM=noreply@edtech.com
EMAIL_FROM_NAME=EdTech Platform
SENDGRID_API_KEY=your-sendgrid-api-key
# OR use SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=edtech-media-bucket
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379/0

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,mkv
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,ppt,pptx
